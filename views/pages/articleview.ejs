        <section class="about-section-1" id="public-articles">
            <div class="container">
                <div class="row">
                    <div class="col-12 bg-light text-dark p-4 card">
                        <h3><%= title %></h3>
                        <p><%= desc %></p>
                        <article><%- data %></article>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="footer bg-black small text-center text-white-50"><div class="container">Copyright Â© Your Website 2020</div></footer>
