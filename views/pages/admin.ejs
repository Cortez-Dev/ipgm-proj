<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>Admin | Articleium</title>
        <link href="static/css/styles.css" rel="stylesheet" />
        <%- include('../partials/head.ejs') %>
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-shrink" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="/">Articleium</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/home">Home</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="notifsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Notifications
                            </a>
                            <div class="dropdown-menu" aria-labelledby="notifsDropdown">
                              <% user.notifications.forEach(element => { %>
                                <a class="dropdown-item" href="#"><%= element %></a>
                              <% }) %>
                            </div>
                        </li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/admin/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <section class="about-section-1 min-vh-100" id="public-articles">
            <div class="container-fluid text-white text-justify">
                <div class="row">
                    <div class="col-md-12 col-xs-12 min-vh-100">
                        <div class="row m-0 card-group" id="article-container">
                            <% articles.forEach(article => { %>
                            <div class="col-lg-4 col-md-6 col-sm-6 px-2 py-2 m-0">
                                  <div class="card text-dark">
                                      <div class="card-body">
                                          <h5 class="card-title"><a href="/article/<%= article._id%>"><%= article.title %></a></h5>
                                          <p class="card-text"><%= article.desc %></p>
                                          <p class="card-text">Genre: <%= article.genre %></p>
                                      </div>
                                      <div class="card-footer">
                                        <a class="btn btn-warning" href="/admin/warn/<%= article.author_id%>/<%= article._id%>">Warn</a></h5>
                                        <a class="btn btn-danger" href="/admin/delete/<%= article._id%>">Delete</a></h5>
                                      </div>
                                  </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="footer bg-black small text-center text-white-50"><div class="container">Copyright Â© Your Website 2020</div></footer>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </body>
</html>
