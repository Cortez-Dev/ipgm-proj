<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title><%= profile.firstName %> <%= profile.lastName %> | Articleium</title>
        <link href="static/css/styles.css" rel="stylesheet" />
        <%- include('../partials/head.ejs') %>
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-shrink" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="/">Articleium</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/home">Home</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/article/new">New Article</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/users/<%= user._id %>">Profile</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="filterDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Options
                            </a>
                            <div class="dropdown-menu" aria-labelledby="filterDropdown">
                                <a class="dropdown-item" href="/users/dashboard">Dashboard</a>
                                <a class="dropdown-item" href="/users/articles">Your Articles</a>
                                <a class="dropdown-item" href="/users/liked">Liked Articles</a>
                                <a class="dropdown-item" href="/users/reported">Reported Articles</a>
                                <a class="dropdown-item" href="/users/followed">Followed Authors</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="notifsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Notifications
                            </a>
                            <div class="dropdown-menu" aria-labelledby="notifsDropdown">
                              <% user.notifications.forEach(element => { %>
                                <a class="dropdown-item" href="#"><%= element %></a>
                              <% }) %>
                            </div>
                        </li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/users/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <section class="about-section-1 min-vh-100" id="public-articles">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 px-2 pb-4 m-0">
                        <form class="card flex-row flex-wrap"  action="/users/save" method="POST">
                            <div class="card-header border-0">
                                <img src="<%= profile.img %>" style="width: 100px; height: 100px;" alt="">
                            </div>
                            <div class="card-block p-4">
                                <div class="card-title form-group">
                                    <input class="form-control" type="text" name="firstName" value="<%= profile.firstName %>" required>
                                    <input class="form-control" type="text" name="lastName" value="<%= profile.lastName %>" required>
                                </div>
                                <div class="card-text form-group">
                                    <input class="form-control" type="text" name="desc" value="<%= profile.desc %>" required>
                                </div>
                                <p class="card-text">Contact: <%= profile_user.email %></p>
                                <p class="card-text">Role: <%= profile_user.role %></p>
                            </div>
                            <div class="w-100"></div>
                            <div class="card-footer w-100 text-muted">
                                <!-- <input type="submit" class="form-control btn btn-primary" value="Update"> -->
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="footer bg-black small text-center text-white-50"><div class="container">Copyright Â© Your Website 2020</div></footer>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="static/js/jquery.js"></script>
    </body>
</html>
