<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>Home | Articleium</title>
        <link href="static/css/styles.css" rel="stylesheet" />
        <%- include('../partials/head.ejs') %>
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-shrink" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="/">Articleium</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/home">Home</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/article/new">New Article</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/users/dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/users/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Main -->
        <section class="about-section-1 text-center" id="public-articles">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h2 class="text-white mb-4">Public Articles</h2>
                    </div>
                </div>
                <div class="row">
                    <% articles.forEach(element => { %>
                      <div class="col-lg-4 col-md-6 col-sm-6 p-2">
                          <div class="card">
                              <div class="card-body">
                                  <h5 class="card-title"><a href="/article/5fb352bb0bc1456f40de07f4"><%= element.title %> </a></h5>
                                  <p class="card-text"><%= element.desc %></p>
                                  <% element.genres.forEach(genre => { %>
                                  <a href="#"><%= genre %></a>
                                  <% } ) %>
                              </div>
                          </div>
                      </div>
                    <% }) %>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="footer bg-black small text-center text-white-50"><div class="container">Copyright Â© Your Website 2020</div></footer>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    </body>
</html>
